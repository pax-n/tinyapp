<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" href="/register">Register</a>
      </div>
    </div>
    <% if (!user_id) { %>
      <form method="POST" class="form-inline" action="/login">
        <input name="email" placeholder="Email" style="margin-right: 15px; border-radius: 5px;"/>
        <input name="password" placeholder="password" style="margin-right: 15px; border-radius: 5px;"/>
        <button type="submit" class="btn btn-outline-dark">Login</button></form>
        <% }%>
        <% if (user_id) { %>
        <p>
          <form method="POST" class="form-inline" action="/logout">
            <b style="font-size: 20px">Hi, <%= user_id %>!</b>
            <button type="submit" class="btn btn-outline-dark" style="margin-left: 15px">Logout</button></form>
        </p>
        <% }%>
  </nav>
</header>